{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node10",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "paths": {
      "@pano/*": ["./*"]
    }
  },
  "exclude": ["./dist", "rollup.config.mjs", "./build", "./scripts/fix-jasmine-imports.js"]
}
